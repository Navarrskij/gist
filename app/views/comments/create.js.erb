<%- if !(@comment.gist_row.nil?) %>
var lineNumber
var arr = $('.CodeMirror-linenumber')
for (var i = 0; i < arr.length; i++) {
  if (arr[i].innerHTML == <%= @comment.gist_row %>) {
    lineNumber = arr[i]
  }
}
  $($('<%= j render(partial: "comment", locals: { comment: @comment }) %>') ).appendTo(lineNumber.parentElement.parentElement);
  $('#comment_area textarea').val('');
<%- else %>
  $('.comments').append('<%= j render(partial: "comment", locals: { comment: @comment }) %>')
  $('#comment_area textarea').val('');
<%- end %>
